{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "script"
	},
	"rules": {
		"indent": [ 0, "tab", { "ignoreComments": true } ],
		"linebreak-style": [ 2, "windows" ],
		"quotes": [ 0, "single" ],
		"semi": [ 2, "always" ],
		"no-unused-vars": [ 1, { "vars": "all", "args": "after-used" } ],
		"no-console": [ 2 ],
		"no-var": [ 2 ],
		"require-atomic-updates": [0]
	},
	"globals": {
		"L": true,
		"T": true,

		"_fs": true,
		"_pa": true,
		"_cr": true,
		"_as": true,

		"BigInt": true,

		"Axios": true,
		"Fex": true,
		"Zstd": true
	}
}